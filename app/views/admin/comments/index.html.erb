<h1 class="mb-5">Comments Administration<%= link_to 'New Comment', new_admin_event_comment_path(@event), class:"btn btn-info btn-sm mx-3"  %></h1>

<div class="container">
  <table class="table">
    <thead>
    <tr>
      <th>N</th>
      <th>Comment</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <%@counter=1 %>
    <% @admin_comments.each do |admin_comment| %>
      <tr>
        <td><%= @counter %></td>
        <td style="width: 50%"><%= admin_comment.event_invitation.user.username %> says: <%= admin_comment.content %></td>
        <td><%= link_to 'Edit', edit_admin_event_comment_path(admin_comment.event.id, admin_comment), class:"btn btn-primary btn-sm mr-2" %><%= link_to 'Destroy', admin_event_comment_path(admin_comment.event.id, admin_comment), method: :delete, class:"btn btn-danger btn-sm" %></td>
      </tr>
      <% @counter+=1 %>
    <% end %>
    </tbody>
  </table>
</div>
