
<h1>Admin Comments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_comments.each do |admin_comment| %>
      <tr>
        <td><%= admin_comment.event_invitation.user.username %> says: <%= admin_comment.content %></td>
        <td><%= link_to 'Edit', edit_admin_event_comment_path(admin_comment.event.id, admin_comment) %></td>
        <td><%= link_to 'Destroy', admin_event_comment_path(admin_comment.event.id, admin_comment), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

