
<div class="row ml-0">
  <%= form_with model: [:admin, @admin_event], local: true do |form| %>
    <% if @admin_event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@admin_event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% @admin_event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :event_picture %>
      <br>
      <%= form.file_field :event_picture %>
    </div>
    <div class="form-group">
      <%= form.label :documents %>
      <br>
      <%= form.file_field :documents, multiple: true %>
    </div>
    <div class="form-group">
      <%= form.label :videos %>
      <br>
      <%= form.file_field :videos, multiple: true %>
    </div>
    <div class="form-group">
      <%= form.label :images %>
      <br>
      <%= form.file_field :images, multiple: true %>
    </div>

    <% if action_name == 'new' %>
      <div class="form-group">
        <%= form.label :user %>
        <%= form.collection_select(:user_id, User.all.order(username: :asc), :id, :username, {}, { class: "form-control" }) %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.submit class:"btn btn-primary mt-3"%>
    </div>
  <% end %>
</div>
