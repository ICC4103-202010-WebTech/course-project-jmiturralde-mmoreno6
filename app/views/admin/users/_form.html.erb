<%= form_with(model: [:admin, admin_user], local: true) do |form| %>
  <% if admin_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_user.errors.count, "error") %> prohibited this admin_user from being saved:</h2>

      <ul>
        <% admin_user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="form-group">
      <%= form.label :username %>
      <%= form.text_field :username, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.fields_for [:admin, @admin_profile_page] do |pf_form| %>
        <div class="field">
          <%= pf_form.label :name %><br />
          <%= pf_form.text_field :name %>
        </div>
        <div class="field">
          <%= pf_form.label :last_name %><br />
          <%= pf_form.text_field :last_name %>
        </div>
        <div class="field">
          <%= pf_form.label :location %><br />
          <%= pf_form.text_field :location %>
        </div>
        <div class="field">
          <%= pf_form.label :bio %><br />
          <%= pf_form.text_area :bio %>
        </div>
      <% end %>
    </div>
    <%= form.submit %>
  </div>
<% end %>
