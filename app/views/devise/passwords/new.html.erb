<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <div class="btn-group mr-2" role="group" aria-label="First group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control mr-2" %>
    </div>
    <div class="btn-group mr-2" role="group" aria-label="Second group">
      <%= f.submit "Send me reset password instructions",class:["btn btn-info btn-block"] %>
    </div>
  </div>

<% end %>

<%= link_to "Back", :back, class: ["btn", "btn-secondary", "mt-4"] %>
