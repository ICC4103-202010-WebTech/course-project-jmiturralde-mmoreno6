<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="signup-form">
      <h2 class="text-center">Creating your account </h2>
      <p class="hint-text text-center mb-4">This will only takes a minute</p>
      <p class="font-italic">Personal information</p>
      <div class="form-group">
        <%= f.fields_for :profile_pages do |pf_form| %>
        <div class="row">
          <div class="col"><%= pf_form.text_field :name, placeholder:"Name", class:"form-control" %></div>
          <div class="col"><%= pf_form.text_field :last_name, placeholder:"Last Name", class:"form-control" %></div>
        </div>
      </div>
      <div class="form-group">
        <%= pf_form.text_field :location, placeholder:"Location", class:"form-control" %>
      </div>
        <% end %>
        <p class="font-italic">Account information</p>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :username, placeholder:"Username", class:"form-control" %>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col"><%= f.password_field :password, autocomplete: "new-password", placeholder:"Password ("+@minimum_password_length.to_s+ " characters min.)", class:"form-control" %></div>
          <div class="col"><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password", class:"form-control" %></div>
        </div>
      </div>
      <div class="form-group">
        <%= f.check_box :terms%> I accept the <%= link_to ' Use Policy', "#my-modal" ,"data-toggle" => "modal", 'data-target' => '#exampleModalLong'%> &amp; <%= link_to ' Terms of Service', "#my-modal" ,"data-toggle" => "modal", 'data-target' => '#exampleModalLong2'%>
      </div>
      <div class="form-group">
        <%= f.submit "Register Now",class:["btn btn-info btn-lg btn-block"] %>
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),class:["btn btn-light btn-lg btn-block"] %>
          <% end %>
        <% end %>
      </div>
    <div class="text-center">Already have an account? <%= link_to "Log in", new_session_path(resource_name) %><br /></div>
  </div>
<% end %>

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Use Policy</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'aup' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModalLong2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Terms of Service</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'tos' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>