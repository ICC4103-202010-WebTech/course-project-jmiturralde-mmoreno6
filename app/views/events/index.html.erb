<h1>My Events</h1>
<br>
<h3>My Created Events</h3>

<% if @events != []%>
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text">
              <%= event.location %>
              <br>
              <%= event.created_at %>
            </p>
            <a href="<%= event_path(event.id) %>" class="btn btn-primary">View</a>
            <a href="<%= edit_event_path(event.id) %>" class="btn btn-primary">Edit</a>
            <%= link_to 'Destroy', event_path(event.id), class: 'btn btn-danger', method: :delete %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<%else %>
  <p>You have not create an event yet :(</p>
<% end %>

<br>

