
<h1>My Organizations</h1>
<br>
<tbody>
<h3>My Created Organizations</h3>
<% if @organizations != []%>
  <div class="row">
    <% @organizations.each do |organization| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= organization.name %></h5>
            <p class="card-text">
              <%= organization.description %>
              <br>
              <%= organization.created_at %>
            </p>
            <a href="<%= organization_path(organization.id) %>" class="btn btn-primary">View</a>
            <a href="<%= edit_organization_path(organization.id) %>" class="btn btn-primary">Edit</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<%else %>
  <p>You have not create an organization yet</p>
<% end %>

<br>

<h3>Organization where I am admin</h3>
<% if @organizations_admin != []%>
  <div class="row">
    <% @organizations_admin.each do |organization| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= organization.name %></h5>
            <p class="card-text">
              <%= organization.description %>
              <br>
              <%= organization.created_at %>
            </p>
            <a href="<%= organization_path(organization.id) %>" class="btn btn-primary">View</a>
            <a href="<%= edit_organization_path(organization.id) %>" class="btn btn-primary">Edit</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>You are not admin of any organization :(</p>
<% end %>





</tbody>
