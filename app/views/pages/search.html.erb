            <div class="col p-4 d-flex flex-column position-static">
              <h4 class="mb-0"><%= organization.name%></h4><br>
              <div class="mb-1 text-muted">Description: <%= organization.description%></div>
            </div>
          </div>
        </div>
      <%end %>
    </div>
<%end %>

