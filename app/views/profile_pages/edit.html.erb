<div class="row ml-0 mt-3">
  <h2>Edit Profile Page</h2>
</div>
<div class="row ml-0 mt-2">
  <p>Please enter the required information to edit the "<%=@profile_page.name%>" profile:</p>
</div>

<div class="row">
  <%= form_for @profile_page, url: user_profile_pages_url, scope: "profile_page" do |form| %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :bio %>
      <%= form.text_area :bio, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
    </div>
    <div class="form-group mt-2">
      <%= form.submit class: ["btn", "btn-primary"]%>
      <%= link_to "Back", :back, class: ["btn", "btn-secondary"] %>
    </div>
      <% end %>
</div>

<%= link_to 'Back', user_profile_pages_path %>
