<p id="notice"><%= notice %></p>

<h1>Profile Pages</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_pages.each do |profile_page| %>
      <tr>
        <td><%= link_to 'Show', profile_page %></td>
        <td><%= link_to 'Edit', edit_profile_page_path(profile_page) %></td>
        <td><%= link_to 'Destroy', profile_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

