<div class="row mb-3">
  <div class="col-md-11">
    <h1>My Profile</h1>
  </div>
  <div class="col-md-1">
    <a href="<%= edit_user_profile_pages_path(@profile_page) %>" class="btn btn-primary">Edit</a>
  </div>

<br>
</div>
<div class="row mb-2" >
    <div class="col-md-5">
      <div class="profile-pic text-center">
        <% if @profile_page.picture.attached? %>
          <div data-toggle="modal" data-target="#exampleModal" style="width:400px; hight:auto">
          <%= image_tag(@profile_page.picture, style:"width:100%") %>
          </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content" style="width:800px">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel"><%=@profile_page.name %></h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body" style="width:800px; hight:auto">
                  <%= image_tag(@profile_page.picture, style:"width:100%") %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-7">
      <div class="profile-info">
        <h3 class="display-3"><%= @profile_page.name + " " + @profile_page.last_name %></h3>
        <h3 class="display-5"><%= "@" + @user.username %></h3><br><br>
        <p class="font-italic"><%= "Location:  " + @profile_page.location %></p>
        <p class="font-italic"><%= "Short bio: " + @profile_page.bio %></p>
      </div>
    </div>
</div>
<br>
<h4>My created events</h4>
<div class="card">
  <ul class="list-group list-group-flush">
    <% @events.each do |event| %>
      <tr>
        <li class="list-group-item"><%=  link_to event.title, event_path(event) %></li>
      </tr>
    <% end %>
  </ul>
</div>
<br>
<h4>My Event Invitations</h4>
<div class="card">
  <ul class="list-group list-group-flush">
    <% @event_invitations.each do |event| %>
      <tr>
        <li class="list-group-item"><%= link_to event.title, event_path(event) %></li>
      </tr>
    <% end %>
  </ul>
</div>
</div>


