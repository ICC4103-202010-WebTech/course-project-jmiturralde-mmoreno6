<%= form_with(model: [@user, :mail_boxes, send_message], local: true) do |form| %>
  <% if send_message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(send_message.errors.count, "error") %> prohibited this send_message from being saved:</h2>

      <ul>
        <% send_message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="form-group">
      <%= form.label :receiver_username %>
      <%= form.collection_select(:receiver_username, User.all.where("id != ?", @user.id).order(username: :asc), :username, :username, {}, { class: "form-control" }) %>
    </div>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: "form-control" %>
    </div>
    <%= form.hidden_field :mail_box_id, :value => @mail_boxes.id %>
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Back', :back, class: "btn btn-secondary" %>
  </div>
<% end %>
