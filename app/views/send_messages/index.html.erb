<p id="notice"><%= notice %></p>

<h1>Send Messages</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @send_messages.each do |send_message| %>
      <tr>
        <td><%= link_to 'Show', send_message %></td>
        <td><%= link_to 'Edit', edit_send_message_path(send_message) %></td>
        <td><%= link_to 'Destroy', send_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

